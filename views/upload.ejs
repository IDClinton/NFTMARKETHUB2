<body>

    <header>
        <nav>
            <ul class='nav-bar'>
                <li class='logo'><a href='#'><img src="img/images.png"/></a></li>
                <input type='checkbox' id='check' />
                <span class="menu">
                    <li><a href="/index.html">Home</a></li>
                    <li><a href="/page">drops</a></li>
                    <li><a href="/dash">Dashboard</a></li>
                    <li><a href="/wallet.html">Connect</a></li>
