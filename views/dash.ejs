	<!-- My CSS -->
	<link rel="stylesheet" href="style.css">

	<title>AdminHub</title>
</head>
<body>
	<div class="loader"></div>
	<!-- C:\Program Files\MongoDB\Server\7.0\data\ -->
	<!-- SIDEBAR -->
	<section id="sidebar">
		<a href="#" class="brand">
			<i>
				<img class="logo" src="img/images.png" alt="">
			</i>
			<span class="text">AdminHub</span>
		</a>
		<ul class="side-menu top">
			<li class="active">
				<a href="#">
					<i class='bx bxs-dashboard' ></i>
					<span class="text">Dashboard</span>
				</a>
			</li>
			<li>
				<a href="/upload">
					<i class='bx bx-upload'></i>
					<span class="text">Upload</span>
				</a>
			</li>
			<li>
				<a href="/page">
					<i class='bx bxs-home'></i>
					<span class="text">Page</span>
				</a>
			</li>
			
			<li>
				<a href="/sourcecode.html">
					<i class='bx bxs-group' ></i>
					<span class="text">Convert Tokens</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			<li>
				<a href="/login2.html">
				<i class='bx bx-money bx-tada' ></i>
					<span class="text">Withdraw</span>
				</a>
			</li>
			
		</ul>
	</section>
	<!-- SIDEBAR -->



	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class='bx bx-menu' ></i>
			<a href="#" class="nav-link">Categories</a>
			<form action="#">
				<div class="form-input">
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn"><i class='bx bx-search' ></i></button>
				</div>
			</form>
			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>
			<a href="#" class="notification">
				<i class='bx bxs-bell' ></i>
				<span class="num">9+</span>
			</a>
			<a href="#" class="profile">
				<img src="img/download.png">
			</a>
		</nav>
		<!-- NAVBAR -->

		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>Dashboard</h1>
					<ul class="breadcrumb">
						<li>
							<a href="#">Dashboard</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="https://nftmarkethub.site/">Home</a>
						</li>
					</ul>
				</div>
				<a href="#" class="btn-download">
					<!-- <i class='bx bxs-cloud-download' ></i> -->
					<span class="text">Welcome <%= name %></span>
				</a>
			</div>

			<ul class="box-info">
				<li>
					<i class='bx bxs-calendar-check' ></i>
					<span class="text">
						<h3>0</h3>
						<p>New Order</p>
					</span>
				</li>
				<li>
					<i class='bx bxs-briefcase-alt' ></i>
					<span class="text">
						<h3> <%= numberOfPosts %></h3>
						<p>Your Projects</p>
					</span>
				</li>
				<li>
					<i class='bx bxs-dollar-circle' ></i>
					<span class="text">
						<h3>
							$<span id="displaySum">0</span>
						</h3>
						<p>Project Balance</p>
					</span>
				</li>
			</ul>


			<div class="table-data">
				<div class="order">
					<div class="head">
						<h3>Recent Withdrawals</h3>
						<i class='bx bx-search' ></i>
						<i class='bx bx-filter' ></i>
					</div>
					<table>
						<thead>
							
						</thead>
						<tbody>
							<tbody>
							<br>
							<h4 class="kk">No Available Transactions</h4>
							<style>
								.kk{
									color: gray;
								}
							</style>
						</tbody>
						</tbody>
					</table>
				</div>
				<div class="todo">
					<div class="head">
						<h3>Todos</h3>
						<i class='bx bx-plus' ></i>
						<i class='bx bx-filter' ></i>
					</div>
					<ul class="todo-list">
						<li class="completed">
							<p>Upload </p>
							<i class='bx bx-dots-vertical-rounded' ></i>
						</li>
						<li class="completed">
							<p>Mint</p>
							<i class='bx bx-dots-vertical-rounded' ></i>
						</li>
						<li class="not-completed">
							<p>Convert Tokens</p>
							<i class='bx bx-dots-vertical-rounded' ></i>
						</li>
						<li class="completed">
							<p>Authenticate</p>
							<i class='bx bx-dots-vertical-rounded' ></i>
						</li>
						
					</ul>
				</div>
			</div>
		</main>
		<!-- MAIN -->
	</section>
	<!-- CONTENT -->

	<script>
		// Retrieve the sum from localStorage
		var sum = localStorage.getItem('sum');
	  
	  // Parse the sum as an integer
	  sum = parseInt(sum);
	  
	  // Check if parsing was successful
	  if (!isNaN(sum)) {
		  // Display the sum on the page
		  document.getElementById('displaySum').innerText = sum;
	  } else {
		  console.error('Failed to retrieve or parse the sum from localStorage.');
	  }
	  </script>
	

	<script src="script.js"></script>
</body>
</html>
